            <label class="form-check-label" for="dif10">
              <h4>10</h4>
            </label>
          </div>
        </div>
      </div>
      </div>
      
      <button class= "btn btn-lg btn-dark"type="submit" value="Submit">Enter</button> 
     

        
    </form>

    <br>
    <div class="row">
      <div class="col">
        <h2>Recent Workouts</h2>
        
      </div>
    </div>

    <div class="align-center card-columns col-lg">
      <%
        if (items) {
          var cards = '';
          //var calories = if(calories) ? calories: "Not found";
          //var protein = if(protein) ? protein: "Not found"
          //var fat = if(fat) ? fat: "Not found"
          //var carbs = if(carbs) ? carbs: "Not found"
          //<!-- Iterate the items object & update the cards variable -->
          items.forEach(function(item) { 
            if(item.activityname===null){
              
              item.activityname="Enter Workout";
              item.date="-";
              item.duration = "-";
              item.type = "-";
              item.difficulty="-";
            }
            cards += 
  
            '<div class="card bg-light border-info" style="width: 18rem; color: #000000; outline: #000000;"><div class="card-body" ><h3 class="card-title">' 
              + item.activityname + 
              '</h4><p class="lead">Date: '+ item.date + 
                ':</p><p class="lead">Duration: '+item.duration+'</p><p class="lead">Type: '+item.type+'</p><p class="lead">Difficulty: '+item.difficulty+'</p></div></div>'
            
          }); %>
          <%- cards %>
      <% } %>
      </div>

    
      
      
      

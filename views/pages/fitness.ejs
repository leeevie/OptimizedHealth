  <div class="container" style="background-color:#a1c0e0;">
   
 
   

    <div class="row">
      <div class="col">
        <h3>Exercise Log</h3> <br>
      </div>
    </div>

    
    <form name="fitnessForm" action="/formreq" method="post">

      <div class="container ">
        <div class="current-activity form-group col-md-4">
          <input type="text" name="activityName" class="form-control" placeholder="Activity Name" required >
        </div>  <br>
        <div class=" current-activity  current-activity form-group col-md-2">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="type" id="radio1" value="cardio">
            <label class="form-check-label" for="radio1">
              <h4>Cardio </h4>
            </label>
          </div>
        </div>
        <div class=" current-activity  current-activity form-group col-md-2">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="type" id="radio2" value="strength">
            <label class="form-check-label" for="radio2">
              <h4>Strength</h4>
            </label>
          </div>
        </div>
        <div class=" current-activity  current-activity form-group col-md-2">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="type" id="radio3" value="yoga">
            <label class="form-check-label" for="radio3">
              <h4>Yoga</h4>
            </label>
          </div>
        </div>
        <div class=" current-activity form-group col-md-2">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="type" id="radio4" value="other">
            <label class="form-check-label" for="radio4">
              <h4>Other</h4>
            </label>
          </div>
        </div>
      </div>
      <br>
      <div class="form-row">
        <div class=" current-activity form-group col-md-6">
          <input type="text" name="date" class="form-control" placeholder="Date (yyyy-mm-dd)" required>
        </div>
        <div class=" current-activity form-group col-md-6">
          <input type="text" name="duration" class="form-control" placeholder="Duration" required>
        </div>
      </div>
    
        <div class=" current-activity form-group col-md-2">
          <h3 >Difficulty</h3>
        </div>
        <div class=" difficulty current-activity">
        <div class="current-activity row">
        <div class="form-group col-md-1">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="difficulty" id="dif1" value="1" required>
            <label class="form-check-label" for="dif1">
              <h4>1</h4>
            </label>
          </div>
        </div>
        <div class="form-group col-md-1">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="difficulty" id="dif2" value="2">
            <label class="form-check-label" for="dif2">
              <h4>2</h4>
            </label>
          </div>
        </div>
        <div class="form-group col-md-1">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="difficulty" id="dif3" value="3">
            <label class="form-check-label" for="dif3">
              <h4>3</h4>
            </label>
          </div>
        </div>
        <div class="form-group col-md-1">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="difficulty" id="dif4" value="4">
            <label class="form-check-label" for="dif4">
              <h4>4</h4>
            </label>
          </div>
        </div>
        <div class="form-group col-md-1">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="difficulty" id="dif5" value="5">
            <label class="form-check-label" for="dif5">
              <h4>5</h4>
            </label>
          </div>
        </div>
        <div class="form-group col-md-1">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="difficulty" id="dif6" value="6">
            <label class="form-check-label" for="dif6">
              <h4>6</h4>
            </label>
          </div>
        </div>
        <div class="form-group col-md-1">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="difficulty" id="dif7" value="7">
            <label class="form-check-label" for="dif7">
              <h4>7</h4>
            </label>
          </div>
        </div>
        <div class="form-group col-md-1">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="difficulty" id="dif8" value="8">
            <label class="form-check-label" for="dif8">
              <h4>8</h4>
